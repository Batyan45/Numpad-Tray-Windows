{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": ["-B", "build"],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--config", "Debug"],
            "group": "build",
            "problemMatcher": ["$msCompile"],
            "dependsOn": "CMake: Configure"
        },
        {
            "label": "CMake: Build Release",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--config", "Release"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"],
            "dependsOn": "CMake: Configure"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${workspaceFolder}/build/Release/NumpadTray.exe",
            "group": "test",
            "problemMatcher": [],
            "dependsOn": "CMake: Build Release"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "Remove-Item",
            "args": ["-Recurse", "-Force", "build"],
            "group": "build",
            "problemMatcher": []
        }
    ]
}
